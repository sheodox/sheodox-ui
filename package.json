{
  "name": "sheodox-ui",
  "version": "0.18.15",
  "description": "Common UI for my projects.",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:package": "svelte-package",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint src/",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "npm run style:check && npm run lint && svelte-check --ignore package && tsc --noEmit -p .",
    "build:package:dev": "svelte-kit package",
    "style:write": "prettier --write .",
    "style:check": "prettier --check . --loglevel warn",
    "prepare": "husky install",
    "build:release": "npm run build:package && npm test && cd package && npm publish"
  },
  "author": "sheodox",
  "license": "ISC",
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@sveltejs/package": "^1.0.2",
    "normalize.css": "^8.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheodox/sheodox-ui"
  },
  "homepage": "https://github.com/sheodox/sheodox-ui",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@sveltejs/adapter-auto": "^1.0.1",
    "@sveltejs/kit": "^1.1.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/sass": "^1.43.0",
    "@types/sass-loader": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.57.1",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.2",
    "svelte-preprocess": "^5.0.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  }
}
